{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },

  "paths": {
    "@app/*": ["./app/*"],
    "@assets/*": ["./assets/*"],
    "@components/*": ["./components/*"],
    "@styles/*": ["./styles/*"],
    "@utils/*": ["./utils/*"]
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
